link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
.container
    .row
        .col-md-12.text-end
            a.btn.btn-primary(href='/') Nuevo producto
    .row
        .col-md-12
            table.table
                thead.thead-dark
                    tr
                        th(scope='col') Id
                        th(scope='col') Nombre
                        th(scope='col') Precio
                        th(scope='col') Foto
                tbody
                    each val in productos
                        tr
                            td=val.id
                            td=val.title
                            td=val.price
                            td
                                img(src=val.thumbnail width='50')
                       
